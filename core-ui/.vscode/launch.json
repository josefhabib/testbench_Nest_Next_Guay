{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Official Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "envFile": "${workspaceFolder}/../.env.development.local"
    },
    {
      "name": "Official Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Official Next.js: debug client-side (Firefox)",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000",
      "reAttach": true,
      "pathMappings": [
        {
          "url": "webpack://_N_E",
          "path": "${workspaceFolder}"
        }
      ]
    },
    {
      "name": "(default) Official Next.js: debug full stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/../.env.development.local"
    },
    {
      "name": "Custom Debug-Next.js: Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect", "node_modules/next/dist/bin/next", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Custom Debug-Next.js: Client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    }
  ],
  "compounds": [
    {
      "name": "Custom - Next.js: Debug Server & Client",
      "configurations": ["Custom Debug-Next.js: Server", "Custom Debug-Next.js: Client"],
      // "preLaunchTask": "Wait for Server", // (see ./tasks.json)
      "stopAll": true // Optional: Stop all configurations when stopping the debugger
    }
  ]
}